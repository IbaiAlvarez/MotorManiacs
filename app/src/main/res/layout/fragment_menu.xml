<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_background"
    tools:context=".Fragments.MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.AdminActivity">
        <Button
            android:id="@+id/btn_añadir_premio"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/custom_blue"
            android:text="Añadir Premio"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_añadir_equipo" />

        <Button
            android:id="@+id/btn_añadir_resultado"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/custom_blue"
            android:text="Añadir Resultado"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_añadir_premio" />

        <Button
            android:id="@+id/btn_añadir_carrera"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/custom_blue"
            android:text="Añadir Carrera"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.941"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_editar_equipo" />

        <Button
            android:id="@+id/btn_añadir_piloto"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="@color/custom_blue"
            android:text="Añadir Piloto"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_editar_piloto"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="@color/custom_blue"
            android:text="Editar Piloto"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.941"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_añadir_equipo"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/custom_blue"
            android:text="Añadir Equipo"
            android:textColor="@color/white"
            android:textSize="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.072"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_añadir_piloto" />

        <Button
            android:id="@+id/btn_editar_equipo"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/custom_blue"
            android:text="Editar Equipo"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.941"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_editar_piloto" />

        <ImageView
            android:id="@+id/img_atras_menu"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="104dp"
            android:src="@drawable/flecha_izq_azul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.207"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_añadir_resultado" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>